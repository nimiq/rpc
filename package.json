{
  "name": "rpc",
  "version": "0.0.1",
  "description": "RPC Client/Server",
  "repository" : {
    "type" : "git",
    "url" : "git+https://github.com/nimiq/rpc.git"
  },
  "scripts": {
    "typecheck": "tsc",
    "lint": "tslint 'src/**/*.ts'",
    "lint-fix": "tslint --fix 'src/**/*.ts'",
    "test": "jest",
    "build-server": "tsc -d && browserify dist/RpcServer.js -d -s RpcServer -o dist/rpc-server.js",
    "build-client": "tsc -d && browserify dist/RpcClient.js -d -s RpcClient -o dist/rpc-client.js",
    "build": "yarn run build-server && yarn run build-client",
    "prepare": "yarn build"
  },
  "author": "Nimiq",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "browserify": "^16.2.2",
    "jest": "^23.4.2",
    "ts-jest": "^23.1.2",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {}
}
